<%= form_for @product, html: {class: 'add-product-form', multipart: true} do |p| %>

    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibitet this product for being saved: </h2>
        </div>
        <ul>
          <% @product.errors.full_messages.each do |msg|  %>
              <li><%= msg %><% end %></li>
        </ul>
    <% end %>

    <p><%= p.label :name %>: <%= p.text_field :name %></p>

    <p>Pictures: <%= @product.pictures.count %></p>
    <% if @product.pictures.exists? %>
        <% @product.pictures.each do |image| %>
        <% end %>
    <% end %>

    <%= p.fields_for :pictures do |picture_field| %>
        <% if picture_field.object.new_record? %>
            <p><%= file_field_tag "product[pictures_attributes][][image]", multiple: true, class: "form-control"%></p>
        <% else %>
            <%= image_tag picture_field.object.image_file_name, class: "product-img", id: "prod-img-#{picture_field.object.id}" %>
            <%= link_to "delete", picture_path(picture_field.object), method: :delete,data: {confirm: 'are you sure?'},remote: true %>
            <% end %>

    <% end %>

    <span>Select category: </span>
    <%= p.collection_select(:category_id, @categories, :id, :title) %></br></br>
    <span>Select manufacturer: </span>
    <%= p.collection_select(:manufacture_id, @manufactures, :id, :title) %></br></br>
    <p><%= p.label :color %>: <%= p.text_field :color %></p>
    <p><%= p.label :price %>: <%= p.text_field :price %></p>
    <p><%= p.label :sku %>: <%= p.text_field :sku %></p>
    <p><%= p.label :description %>: <%= p.text_area :description %></p>
    <%= p.submit %>

<% end %>