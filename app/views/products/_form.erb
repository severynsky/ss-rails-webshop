<%= form_for @product, html: {class: 'add-product-form'} do |p| %>

    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibitet this product for being saved: </h2>
        </div>
        <ul>
          <% @product.errors.full_messages.each do |msg|  %>
              <li><%= msg %><% end %></li>
        </ul>
    <% end %>

    <p><%= p.label :name %>: <%= p.text_field :name %></p>
    <p><%= p.label :category %>: <%= p.text_field :category %></p>
    <p><%= p.label :manufacture %>: <%= p.text_field :manufacture %></p>
    <p><%= p.label :image %>: <%= p.text_field :image %></p>
    <p><%= p.label :color %>: <%= p.text_field :color %></p>
    <p><%= p.label :price %>: <%= p.text_field :price %></p>
    <p><%= p.label :sku %>: <%= p.text_field :sku %></p>
    <p><%= p.label :description %>: <%= p.text_area :description %></p>
    <%= p.submit %>
<% end %>