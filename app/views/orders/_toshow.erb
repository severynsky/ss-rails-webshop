<div class="col-xs-6">
  <% @cart.product_records.each do |prod_rec| %>

      <div class="order-item">
        <h4><%= prod_rec.product.name %></h4>
        <div class="col-xs-6">
          <p><%= image_tag prod_rec.product.pictures.last.image_file_name %></p>
        </div>
        <div class="col-xs-6">
          <p><strong>About product:</strong></p>
          <%= prod_rec.product.description %>
          <p><strong>Quantity:</strong>
            <%= prod_rec.quantity %>
          <p></p>
          <p><strong>Price:</strong>
            <span class="red"><strong><%= prod_rec.product.price %></strong></span></p>
        </div>
        <div class="clear"></div>
        <%= link_to 'remove from order', product_record_path(prod_rec) , method: :delete, class: "pull-right btn btn-danger", data: {confirm: 'are you sure?'}%>
            <div class="clear"></div>
            </div>
        <% end %>
        </div>

        <div class="col-xs-6">
          <p><%= @user.username %></p>
          <p><%= @user.email %></p>
          <p>Ship selected items to: <strong><%= @user.address %></strong></p>
        </div>