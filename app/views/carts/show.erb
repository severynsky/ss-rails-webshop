<% if @cart.product_records.count > 0 %>
    <h2><%= $print %></h2>
<div class="cart">
  <% @cart.product_records.each do |item| %>
      <div class="cart-item" id="cart-item-<%= item.product_id %>">
          <p><%= item.product.name %></p>
          <%= image_tag item.product.pictures.last.image_file_name, class: 'img' %>
          <div class="col-xs-6"><p>quantity: <%= item.quantity %></p>
          <p class="red"><%= item.quantity_price %></p></div>
            <div class="col-xs-6"><%= link_to "remove from cart", product_record_path(item), method: :delete, data: {confirm: "are You sure"},class: "btn btn-danger btn-xs", remote: true%></div>
            </div>
      <% end %>
        <div class="clear"></div>
    <%= link_to "create order", new_order_path, class: "btn btn-info" %>
    <%= link_to "see order", order_path, class: "btn btn-info" %>
</div>
<% else %>
    <h3>There is no items in your cart</h3>

<% end %>